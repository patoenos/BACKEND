<%- include("./partials/head.ejs") %>
<%- include("./partials/header.ejs") %>

<section class="productos">
    <h2>PRODUCTOS</h2>
        <% if (items){ %>
            <table>
                <tr>
                    <th>TITULO</th>
                    <th>PORTADA</th>
                    <th>PRECIO</th>
                </tr>
            
                <% items.forEach(item=>{%> 
                <tr>
                    <td><%=item.title%></td>
                    <td><img alt="item img" width="200px" src="<%=item.thumbnail%>"  /></td>
                    <td>$<%=item.price%>  MXN</td>
                </tr>
                <% })  %> 
            </table>
        <% } else {%>
    <p>No hay productos</p>
    <% } %>
</section>

